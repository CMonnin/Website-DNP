---
import { cn } from '@/utils/cn';

type Props = {
  class?: string;
  id: string;
  placeholder?: string;
};

const { class: className, id, placeholder } = Astro.props;
---

<form autocomplete="off" class={cn('relative', className)} id={id}>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    class="absolute left-2 top-3 h-4 w-4 text-gray-700 dark:text-gray-300"
  >
    <circle cx="11" cy="11" r="8"></circle>
    <path d="m21 21-4.3-4.3"></path>
  </svg>
  <input
    class="flex h-10 w-full rounded-md border border-gray-300 bg-transparent px-3 py-1 pl-8 text-sm shadow-sm transition-colors placeholder:text-gray-700 placeholder:opacity-80 focus-visible:outline-none disabled:cursor-not-allowed disabled:opacity-50 dark:border-gray-700 dark:placeholder:text-gray-300"
    placeholder={placeholder}
    type="text"
  />
</form>
