---
import Logo from './Logo.astro';

import { useTranslations } from '@/i18n';
import { cn } from '@/utils/cn';

type Props = {
  class?: string;
};

const { translatePath } = useTranslations(Astro.url);
const { class: className } = Astro.props;
---

<a class={cn('flex h-10 items-center no-underline [&>svg]:h-full [&>svg]:w-auto', className)} href={translatePath('/')}>
  <Logo class="fill-sky-900 dark:fill-slate-100" />
  <span class="ml-3 whitespace-nowrap font-semibold tracking-tight text-gray-700 dark:text-gray-300">DNP</span>
</a>
