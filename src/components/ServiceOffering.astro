---
import Card from './Card.astro';
import Heading from './Heading.astro';

type Props = {
  description: string;
  title: string;
  link: {
    href: string;
    label: string;
  };
};

const { description, link, title } = Astro.props;
---

<Card class="group duration-200 hover:scale-105">
  <a class="flex h-full flex-col justify-between gap-3 p-5" href={link.href} target="_blank">
    <div class="flex flex-col gap-2">
      <Heading variant="h5">
        {title}
      </Heading>
      <p class="text-sm text-gray-700 dark:text-gray-300">
        {description}
      </p>
    </div>
    <span class="text-sm font-medium group-hover:underline md:text-base">{link.label} Â»</span>
  </a>
</Card>
