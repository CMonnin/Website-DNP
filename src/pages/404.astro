---
import Logo from '@/components/Logo.astro';
import Layout from '@/layouts/Layout.astro';
---

<Layout class="flex flex-col items-center justify-center" description="Page Not Found" title="404 - Not Found">
  <div class="mb-3 flex items-center justify-center">
    <Logo class="h-24 w-24" />
  </div>
  <h1 class="text-3xl font-extrabold tracking-tight sm:text-4xl md:text-5xl">404 - Not Found</h1>
  <p class="mt-2 max-w-prose text-center text-sm text-slate-700 dark:text-slate-300 sm:text-base">
    Please verify the URL or use the navigation menu above to find what you're looking for.
  </p>
  <br class="my-6" />
</Layout>
