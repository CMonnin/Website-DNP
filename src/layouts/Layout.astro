---
import { cn } from '@douglasneuroinformatics/libui/utils';
import { useTranslations } from '@/i18n';

interface Props {
  author?: string;
  description: string;
  keywords?: string[];
  title: string;
}

const { author, description, keywords, title } = Astro.props;
const { resolvedLanguage } = useTranslations(Astro.url);
---

<!doctype html>
<html lang={resolvedLanguage}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    {author && <meta name="author" content={author} />}
    {keywords && <meta name="keywords" content={keywords.join(', ')} />}
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>
  <body>
    <main class="relative flex min-h-screen items-center justify-center bg-gray-100 p-4">
      <div class="absolute right-4 top-4 flex space-x-2">
        <a
          id="en-button"
          class={cn(
            'rounded bg-gray-500 px-4 py-2 text-white sm:px-4 sm:py-2 md:px-6 md:py-3',
            resolvedLanguage === 'en' && 'bg-blue-500'
          )}
          href={new URL(Astro.url.href.replace(`/${resolvedLanguage}`, `/en`))}
        >
          English
        </a>
        <a
          class={cn([
            'rounded bg-gray-500 px-4 py-2 text-white sm:px-4 sm:py-2 md:px-6 md:py-3',
            resolvedLanguage === 'fr' && 'bg-blue-500'
          ])}
          href={new URL(Astro.url.href.replace(`/${resolvedLanguage}`, `/fr`))}
        >
          Fran√ßais
        </a>
      </div>
      <slot />
    </main>
  </body>
</html>
