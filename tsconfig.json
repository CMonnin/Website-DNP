{
  "extends": [
    "@douglasneuroinformatics/tsconfig"
  ],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "checkJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "astro.config.ts",
    "eslint.config.js",
    "prettier.config.js",
    "tailwind.config.cjs"
  ]
}